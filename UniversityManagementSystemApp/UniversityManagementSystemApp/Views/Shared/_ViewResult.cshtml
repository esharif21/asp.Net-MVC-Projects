@model IEnumerable<UniversityManagementSystemApp.Models.ViewModel.ViewResultModel>

@{
    ViewBag.Title = "View Result";
}
@{
    if(TempData["NoCourseFound"] == null)
    {
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayName("Course Code")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grade)
                </th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
            </tr>
            }
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            @TempData["NoCourseFound"]
            @Html.ActionLink(", Enroll New Course?", "../EnrollCourse/Create")
        </div>
    }
}

